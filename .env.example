# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/receipt-analyzer
DB_NAME=receipt_analyzer

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# OCR Configuration
TESSERACT_LANG=fra+eng
OCR_CONFIDENCE_THRESHOLD=60

# OpenAI Configuration (REQUIRED - Get your API key from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FORMATS=jpeg,jpg,png,pdf
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
# Comma-separated list of IPs to whitelist from rate limiting
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Security
API_KEY_HEADER=x-api-key
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# API Keys format: key:clientId:name,key2:clientId2:name2
API_KEYS=
# Enable/disable input sanitization (default: true)
ENABLE_INPUT_SANITIZATION=true
# Enable/disable request logging of sensitive data (default: false)
LOG_SENSITIVE_DATA=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Processing
PROCESSING_TIMEOUT_MS=30000
QUEUE_CONCURRENCY=5

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_STATUS_TTL=30
CACHE_RESULT_TTL=3600
CACHE_OCR_TTL=7200